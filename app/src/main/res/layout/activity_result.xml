<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultActivity">

    <ImageView
        android:id="@+id/ion_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/ion_return"
        android:contentDescription="@string/ion_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_result"
        android:layout_width="137dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/montserrat_alternates_light"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ion_return"
        tools:text="Hi, Sally!" />

    <TextView
        android:id="@+id/tv_result_text"
        android:layout_width="217dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="top"
        android:text="@string/tv_result"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome_result"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_result" />

    <ImageView
        android:id="@+id/img_result_box"
        android:layout_width="398dp"
        android:layout_height="673dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/result_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_result_content"
        android:layout_width="334dp"
        android:layout_height="594dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_result_box"
        app:layout_constraintEnd_toEndOf="@+id/img_result_box"
        app:layout_constraintStart_toStartOf="@+id/img_result_box"
        android:lineHeight="19.5dp"
        tools:text="The result of your diagnose is Psioriasis.\nPsoriasis is a chronic and autoimmune inflammatory disease (disease that appears as a result of a reaction of the immune system or the body's immune system) that occurs on the skin characterized by thick white, silver, or red scaly patches in various parts of the body triggered by environmental factors, immune attack body (autoimmune) due to an abnormal number of lymphocytes, and an overactive immune system.\nHere are some precautions that can be taken."
        tools:targetApi="p" />
</androidx.constraintlayout.widget.ConstraintLayout>