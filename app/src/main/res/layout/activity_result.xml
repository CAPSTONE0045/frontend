<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:popupTheme="@style/Theme.SkinAI.AppBarOverlay" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_welcome_result"
            android:layout_width="137dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:gravity="top"
            android:letterSpacing="-0.02"
            android:textColor="@color/black_title"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/welcome_home_text" />

        <TextView
            android:id="@+id/tv_result_text"
            android:layout_width="217dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="top"
            android:text="@string/tv_result"
            android:textColor="@color/black_title"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tv_welcome_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome_result" />

        <ImageView
            android:id="@+id/img_result_box"
            android:layout_width="0dp"
            android:layout_height="673dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:src="@drawable/result_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_result_text" />

        <TextView
            android:id="@+id/tv_result_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="top"
            android:lineHeight="19.5dp"
            android:text="@string/content_result"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/img_result_box"
            app:layout_constraintStart_toStartOf="@+id/img_result_box"
            app:layout_constraintTop_toTopOf="@+id/img_result_box"
            tools:targetApi="p" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>