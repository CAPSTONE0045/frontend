<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".ui.check.CheckFragment">

    <ImageView
        android:id="@+id/img_bar"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="38dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/tap_instruction"
        android:src="@drawable/rectangle_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_tap_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/tap_icon"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="@+id/img_bar"
        app:layout_constraintTop_toTopOf="@+id/img_bar" />

    <TextView
        android:id="@+id/tv_tap_instruction"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="top"
        android:text="@string/tap_instruction"
        android:textColor="@color/black_title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bar"
        app:layout_constraintStart_toStartOf="@+id/img_bar"
        app:layout_constraintTop_toTopOf="@+id/img_bar" />

    <ImageView
        android:id="@+id/img_human_body"
        android:layout_width="366dp"
        android:layout_height="531dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/tap_instruction"
        android:src="@drawable/human_body_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_bar" />

    <ImageView
        android:id="@+id/img_check_location"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="166dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/tap_instruction"
        android:src="@drawable/check_location_icon"
        app:layout_constraintEnd_toEndOf="@+id/img_human_body"
        app:layout_constraintStart_toStartOf="@+id/img_human_body"
        app:layout_constraintTop_toTopOf="@+id/img_human_body" />
</androidx.constraintlayout.widget.ConstraintLayout>